{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "mcp-server-filesystem",
        "/home/runner/work/dots-notifier/dots-notifier"
      ],
      "disabled": false
    },
    "github": {
      "command": "npx", 
      "args": [
        "mcp-server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "disabled": false
    },
    "rust-analyzer": {
      "command": "rust-analyzer",
      "args": [
        "--stdio"
      ],
      "env": {
        "RUST_LOG": "rust_analyzer=info"
      },
      "disabled": false
    }
  },
  "mcpClientSettings": {
    "timeout": 30000,
    "retries": 3,
    "debugLogging": false
  }
}